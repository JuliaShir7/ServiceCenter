                                        <DataGridTextColumn Header="Производитель"  Binding="{Binding Device.Manufacturer}"  MinWidth="150" Width="150*"/>
                                        <DataGridTextColumn Header="Модель" Binding="{Binding Device.Model}"  MinWidth="150" Width="150*"/>
                                        <DataGridTextColumn Header="Серийный номер" Binding="{Binding Device.SeriaNum}" MinWidth="150" Width="150*"/>
